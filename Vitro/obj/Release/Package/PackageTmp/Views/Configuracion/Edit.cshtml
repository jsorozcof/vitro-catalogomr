@model Vitro.Models.ConfiguracionViewModel
@{
    ViewBag.Title = "Editar Configuraciones";
}

<h2 class="text-upper h1">Editar Configuraciones</h2>
<div class="row">
    <div class="cell-12">
        <a href="@Url.Action("Index","Configuracion")" class="button"><i class="mif-arrow-left"></i></a>
    </div>
</div>
<div class="row">
    <div class="cell-12">
        @using (Html.BeginForm("Edit", "Configuracion", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.ConfiguracionId)
            <div class="form-group">
                <label>VIGENCIA NUEVOS PRODUCTOS</label>
                @Html.TextBoxFor(x => x.DiasVigenciaNuevosProductos,new { data_append="DIAS", data_role="input"})
            </div>
            <div class="form-group">
                <button type="submit" class="button primary">GUARDAR</button>
            </div>
        }
    </div>
</div>