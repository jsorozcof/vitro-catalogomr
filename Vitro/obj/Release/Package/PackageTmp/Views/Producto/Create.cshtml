@model Vitro.Models.ProductoViewModel
@{
    ViewBag.Title = "Crear Producto";
}

<h2 class="text-upper h1">@ViewBag.Title</h2>
<ul class="breadcrumbs">
    <li class="page-item"><a href="@Url.Action("Index","Producto")" class="page-link"> Productos</a></li>
    <li class="page-item"><a href="#" class="page-link">Crear Producto</a></li>
</ul>
<hr />
<div class="row h-vh-100" ng-app="app" ng-controller="prodController">
    <div class="cell-md-6">
        @using (Html.BeginForm("Register", "Producto", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="cell-md-4">
                    @Html.LabelFor(x => x.Pais)
                    @Html.DropDownListFor(x => x.Pais, new SelectList(Model.PaisList, "PaisId", "Nombre"), "Seleccione...", new { ng_change = "changePais()", ng_model = "paisSelected" })
                    @Html.ValidationMessageFor(x => x.Pais)
                </div>
                <div class="cell-md-4">
                    @Html.LabelFor(x => x.SAP)
                    @Html.TextBoxFor(x => x.SAP, new { data_role = "input" })
                    @Html.ValidationMessageFor(x => x.SAP, null, new { @class = "fg-red" })
                </div>
                <div class="cell-md-4">
                    @Html.LabelFor(x => x.NAGS)
                    @Html.TextBoxFor(x => x.NAGS, new { data_role = "input" })
                    @Html.ValidationMessageFor(x => x.NAGS, null, new { @class = "fg-red" })
                </div>
                <div class="cell-md-3">
                    @Html.LabelFor(x => x.Marca)
                    <select name="Marca" id="Marca" ng-change="changeMarcas()" ng-model="marcaSelected">
                        <option ng-repeat="marca in marcas" value="{{marca.MarcaId}}">{{marca.Nombre}}</option>
                    </select>
                    @Html.ValidationMessageFor(x => x.Marca, null, new { @class = "fg-red" })
                </div>
                <div class="cell-md-3">
                    @Html.LabelFor(x => x.Modelo)
                    <select name="Modelo" id="Modelo">
                        <option>Seleccione...</option>
                        <option ng-repeat="modelo in modelos" value="{{modelo.ModeloId}}">{{modelo.Nombre}}</option>
                    </select>
                    @Html.ValidationMessageFor(x => x.Modelo, null, new { @class = "fg-red" })
                </div>
                <div class="cell-md-3">
                    @Html.LabelFor(x => x.StartYear)
                    @Html.TextBoxFor(x => x.StartYear, new { data_role = "input" })
                    @Html.ValidationMessageFor(x => x.StartYear, null, new { @class = "fg-red" })
                </div>
                <div class="cell-md-3">
                    @Html.LabelFor(x => x.EndYear)
                    @Html.TextBoxFor(x => x.EndYear, new { data_role = "input" })
                    @Html.ValidationMessageFor(x => x.EndYear, null, new { @class = "fg-red" })
                </div>
                <div class="cell-12">
                    @Html.LabelFor(x => x.Descripcion)
                    @Html.TextAreaFor(x => x.Descripcion, new { data_role = "textarea" })
                </div>
                <div class="cell-md-6">
                    @Html.LabelFor(x => x.Clasificacion)
                    @Html.DropDownListFor(x => x.Clasificacion, new SelectList(Model.Clasificaciones, "ClasificacionId", "Nombre"), "Seleccione...", new { ng_change = "changeClasificacion()", ng_model = "clasificacionSelected" })
                    @Html.ValidationMessageFor(x => x.Clasificacion, null, new { @class = "fg-red" })
                </div>
                <div class="cell-md-6">
                    @Html.LabelFor(x => x.TipoParte)
                    <select id="TipoParte" name="TipoParte">
                        <option>Seleccione...</option>
                        <option ng-repeat="tparte in tpartes" value="{{tparte.TipoParteId}}">{{tparte.Nombre}}</option>
                    </select>
                    @Html.ValidationMessageFor(x => x.TipoParte, null, new { @class = "fg-red" })
                </div>
                <div class="cell-md-4">
                    @Html.LabelFor(x => x.Perforacion)
                    @Html.TextBoxFor(x => x.Perforacion, new { data_role = "input" })
                    @Html.ValidationMessageFor(x => x.Perforacion, null, new { @class = "fg-red" })
                </div>
                <div class="cell-md-4">
                    @Html.LabelFor(x => x.Ancho)
                    @Html.TextBoxFor(x => x.Ancho, new { data_role = "input" })
                    @Html.ValidationMessageFor(x => x.Ancho, null, new { @class = "fg-red" })
                </div>
                <div class="cell-md-4 mb-3">
                    @Html.LabelFor(x => x.Alto)
                    @Html.TextBoxFor(x => x.Alto, new { data_role = "input" })
                    @Html.ValidationMessageFor(x => x.Alto, null, new { @class = "fg-red" })
                </div>
                <div class="cell-md-2">
                    @Html.CheckBoxFor(x => x.Boton, new { data_role = "checkbox", data_caption = "Botón" })
                </div>
                <div class="cell-md-2">
                    @Html.CheckBoxFor(x => x.Red, new { data_role = "checkbox", data_caption = "Red" })
                </div>
                <div class="cell-md-2">
                    @Html.CheckBoxFor(x => x.Serigrafia, new { data_role = "checkbox", data_caption = "Serigrafía" })
                </div>
                <div class="cell-md-2">
                    @Html.CheckBoxFor(x => x.SensorLluvia, new { data_role = "checkbox", data_caption = "Sensor de Lluvia" })
                </div>
                <div class="cell-md-2">
                    @Html.CheckBoxFor(x => x.Moldura, new { data_role = "checkbox", data_caption = "Moldura" })
                </div>

                <div class="cell-md-2">
                    @Html.CheckBoxFor(x => x.Holder, new { data_role = "checkbox", data_caption = "Holder" })
                </div>
                <div class="cell-md-2">
                    @Html.CheckBoxFor(x => x.SensorCondensacion, new { data_role = "checkbox", data_caption = "Sensor de Condensación" })
                </div>
                <div class="cell-md-2">
                    @Html.CheckBoxFor(x => x.Homologo, new { data_role = "checkbox", data_caption = "Homologo" })
                </div>
                <div class="cell-md-2">
                    @Html.CheckBoxFor(x => x.Antena, new { data_role = "checkbox", data_caption = "Antena" })
                </div>
                <div class="cell-md-2">
                    @Html.CheckBoxFor(x => x.SubEnsamble, new { data_role = "checkbox", data_caption = "Sub Ensamble" })
                </div>
                <div class="cell-md-4"></div>
                <div class="cell-md-4">
                    @Html.LabelFor(x => x.Color)
                    @Html.DropDownListFor(x => x.Color, new SelectList(Model.ColorList, "ColorId", "Nombre"), "Seleccione...", new { data_role = "select" })
                    @Html.ValidationMessageFor(x => x.Color, null, new { @class = "fg-red" })
                </div>
                <div class="cell-md-4">
                    @Html.LabelFor(x => x.TipoVidrio)
                    @Html.DropDownListFor(x => x.TipoVidrio, new SelectList(Model.TipoVidroList, "TipoVidrioId", "Nombre"), "Seleccione...", new { data_role = "select" })
                    @Html.ValidationMessageFor(x => x.TipoVidrio, null, new { @class = "fg-red" })
                </div>
                <div class="cell-md-4">
                    @Html.LabelFor(x => x.Mercado)
                    @Html.DropDownListFor(x => x.Mercado, new SelectList(Model.MercadoList, "MercadoId", "Nombre"), "Seleccione...", new { data_role = "select" })
                    @Html.ValidationMessageFor(x => x.Mercado, null, new { @class = "fg-red" })
                </div>
                <div class="cell-md-6">
                    @Html.LabelFor(x => x.Procedencia)
                    @Html.DropDownListFor(x => x.Procedencia, new SelectList(Model.ProcedenciaList, "ProcedenciaId", "Nombre"), "Seleccione...", new { data_role = "select", data_drop_height = "100" })
                    @Html.ValidationMessageFor(x => x.Procedencia, null, new { @class = "fg-red" })
                </div>
                <div class="cell-6">
                    <label>Archivo de Imagen</label>
                    <input type="file" name="Files" id="Files" data-role="file" data-button-title="Seleccione una imagen..." multiple />
                    @Html.ValidationMessageFor(x => x.Files, null, new { @class = "fg-red" })
                </div>
                <div class="cell-12 mt-3">
                    <button type="submit" class="button fg-white" style="background-color: #0057b8;">GUARDAR</button>
                </div>
            </div>
        }
    </div>
    <div class="cell-md-6">
        <div class="container-fluid row">
            <div class="cell-12">
                <table id="tblimg" class="table striped compact cell-border" data-role="table" data-show-search="false" data-show-rows-steps="false" data-horizontal-scroll="true">
                </table>
            </div>
        </div>
    </div>

    <div class="dialog alert" data-role="dialog" id="dialogCreate">
        <div class="dialog-title">ALERTA</div>
        <div class="dialog-content p-4">Ya se encuentra un producto con el codigo SAP ingresado. <br /> ¿Desea continuar con la creacion del producto?</div>
        <div class="dialog-content p-4">Si no continua con la creacion del producto la informacion ingresada se perdera!</div>
        <div class="dialog-actions">
            <button class="button js-dialog-close">SI, CONTINUAR</button>
            <button class="button js-dialog-close" onclick="document.location.href='@Url.Action("Create","Producto")'">NO, DESEO CREAR UNO NUEVO</button>
        </div>
    </div>
</div>

@section Scripts{
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/angular")
    <script src="~/Scripts/productos.js"></script>
    <script>
        $(document).ready(function () {
            $("input[name='SAP']").focusout(function () {
                let urlserver = '@Url.Action("Producto/ByNAGS","api/Container")';
                let urlsite = urlserver + "/" + $(this).val();
                if ($(this).val().length > 0) {
                    $.get(urlsite).done(function (response) {
                    var val = response;
                    if (val) {
                        Metro.dialog.open("#dialogCreate");
                    }
                }).fail(function (error) {
                    console.log(error);
                });
                }
            });

        });
    </script>
}
