@using Vitro.Models
@model LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximun-scale=1.0, user-scalable=no">
    <title>Inicio de sesión - Vitro</title>
    @Styles.Render("~/Content/css")
</head>
<body class="h-vh-100" style="background: #edfbff">

    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class="login-form bg-white p-6 mx-auto border bd-default win-shadow"}))
    {
        <div>
            <img src="~/Resources/Images/vitro-logo.png" class="img-fluid" />
        </div>
        <hr class="bg-cyan" />
        @Html.AntiForgeryToken()
        <div class="form-group">
            <label>Código SAP</label>
            @Html.TextBoxFor(x => x.Email, new { data_role = "input" })
            @Html.ValidationMessageFor(x => x.Email, null, new { @class = "fg-red" })
        </div>
        <div class="form-group">
            @Html.LabelFor(x => x.Password)
            @Html.PasswordFor(x => x.Password, new { data_role = "input", data_clear_button="false" })
            @Html.ValidationMessageFor(x => x.Password, null, new { @class = "fg-red" })
        </div>
        <div class="form-group">
            @Html.CheckBoxFor(x => x.RememberMe, new { data_role = "checkbox", data_caption = "Recordar mi cuenta." })
        </div>
        <div class="form-group">
            <button type="submit" class="button fg-white" style="background-color: #0057b8;">ACEPTAR</button>
        </div>
    }

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/metro")
    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(document).ready(function () {
            $("input[name='Email']").focus();
        });
    </script>
</body>
</html>